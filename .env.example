# Environment Configuration
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENABLE_DOCS=true

# CORS settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# SAP Configuration
SAP_ENABLED=false
SAP_HOST=sap.example.com
SAP_SYSNR=00
SAP_CLIENT=100
SAP_USER=your_sap_user
SAP_PASSWORD=your_sap_password
SAP_POOL_SIZE=5

# Oracle Configuration
ORACLE_ENABLED=false
ORACLE_HOST=oracle.example.com
ORACLE_PORT=1521
ORACLE_SERVICE=ORCL
ORACLE_USER=your_oracle_user
ORACLE_PASSWORD=your_oracle_password
ORACLE_POOL_SIZE=5

# SQL Server Configuration
SQLSERVER_ENABLED=false
SQLSERVER_HOST=sqlserver.example.com
SQLSERVER_DATABASE=your_database
SQLSERVER_USER=your_user
SQLSERVER_PASSWORD=your_password
SQLSERVER_POOL_SIZE=5

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# Performance settings
MAX_WORKERS=10
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1000

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
OTLP_ENDPOINT=http://localhost:4317

# Security
SECRET_KEY=change-me-in-production
API_KEY_HEADER=X-API-Key
ENABLE_API_KEY=false

# Data Processing
MAX_BATCH_SIZE=1000
CHUNK_SIZE=10000
USE_CPP_ACCELERATION=false