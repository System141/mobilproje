# Environment Configuration for Turkish Business Integration Platform
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://turkuser:turkpass@localhost/turkplatform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=turkplatform
KAFKA_AUTO_OFFSET_RESET=latest

# Security Configuration
SECRET_KEY=change-me-in-production-with-strong-key
ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Multi-Tenant Configuration
DEFAULT_TENANT_PLAN=trial
MAX_TENANTS_PER_INSTANCE=1000

# Turkish Business Integrations

# Netgsm (SMS & WhatsApp)
NETGSM_ENABLED=false
NETGSM_USER_CODE=your_netgsm_user
NETGSM_PASSWORD=your_netgsm_password
NETGSM_SENDER_NAME=FIRMA

# Bulutfon (Phone System)
BULUTFON_ENABLED=false
BULUTFON_API_KEY=your_bulutfon_api_key
BULUTFON_MASTER_TOKEN=your_master_token

# Arvento (Vehicle Tracking)
ARVENTO_ENABLED=false
ARVENTO_API_KEY=your_arvento_api_key
ARVENTO_USERNAME=your_arvento_username
ARVENTO_PASSWORD=your_arvento_password

# Findeks (Credit Scoring)
FINDEKS_ENABLED=false
FINDEKS_USER_CODE=your_findeks_user
FINDEKS_PASSWORD=your_findeks_password

# Iyzico (Payment Gateway)
IYZICO_ENABLED=false
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# E-Fatura (Turkish E-Invoice)
EFATURA_ENABLED=false
EFATURA_USERNAME=your_efatura_username
EFATURA_PASSWORD=your_efatura_password
EFATURA_TEST_MODE=true

# KVKK Compliance
KVKK_ENABLED=true
KVKK_DEFAULT_RETENTION_DAYS=365
KVKK_BREACH_NOTIFICATION_EMAIL=kvkk@yourcompany.com
DATA_RESIDENCY_REGION=turkey

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Performance Settings
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
MAX_UPLOAD_SIZE_MB=100

# Turkish Localization
DEFAULT_LANGUAGE=tr-TR
DEFAULT_TIMEZONE=Europe/Istanbul
DEFAULT_CURRENCY=TRY

# Production Settings (Override in .env.production)
USE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem  
SSL_KEY_PATH=/path/to/key.pem